<% unless @unsigned_players.empty? then %>


<table>
  <tr>
    <th>Player Name</th>
    <th>action</th>
  </tr>
  <% @unsigned_players.each do |player| %>
    <tr>
      <td><%= link_to player.name, player %></td>
      <td><%= button_to "Add to team", player_path(:id => player, :player => { :team_id => @team.id}), :method => :put, :action => 'update' %></td>
    </tr>
  <% end %>
</table>


<% else %>
  No players on team
<% end %>